<h1>投稿一覧</h1>
<% @posts.each do |post| %>
  <%= link_to(post.title, "/posts/#{post.id}") %>
<% end %>

<h1>新規投稿</h1>
<%= form_for(@post) do |f| %>
  <% @post.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
  <h1>title</h1>
    <%= f.text_field :title %>
  <h1>text</h1>
    <%= f.text_area :body %>
    <%= f.submit "投稿" %>
<% end %>
